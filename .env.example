# demo defaults — copy to .env and adjust for your environment

# Host label that Fluent Bit adds to each record
HOSTNAME=local-macos
FLB_FORWARD_PORT=24224

# OpenObserve admin credentials (used for UI + ingestion)
OO_ROOT_EMAIL=admin@example.com
OO_ROOT_PASSWORD=StrongPasswordHere
OO_QUERY_THREAD_POOL_SIZE=16
OO_HTTP_PORT=5080
OO_INGESTION_PORT=5081

# Fluent Bit ➜ OpenObserve routing
OO_HTTP_HOST=openobserve
OO_ORG=default
OO_STREAM_LOGS=logs
OO_STREAM_ALERTS=logs_alerts
# base64(admin@example.com:StrongPasswordHere)
OO_AUTH_HEADER=Basic YWRtaW5AZXhhbXBsZS5jb206U3Ryb25nUGFzc3dvcmRIZXJl

# Log filtering
LOG_INCLUDE_REGEX=(?i)(info|error|exception)
LOG_ALERT_REGEX=(?i)(error|exception)
