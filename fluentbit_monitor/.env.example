#
# Copy to .env and adjust to match your Linux Docker host.
#

# Host metadata & resource limits
HOSTNAME=linux-docker-host
FLB_IMAGE_TAG=latest
FLB_STORAGE_TOTAL_LIMIT=512M
FLB_TAIL_MEM_BUF_LIMIT=32M

# OpenObserve endpoint (single shared backend for every monitor)
OO_HTTP_HOST=host.docker.internal
OO_HTTP_PORT=5080
OO_HTTP_TLS=Off
OO_HTTP_COMPRESS=gzip
OO_ORG=default
OO_STREAM=default
OO_HTTP_USER=admin@example.com
OO_HTTP_PASSWORD=xTb6f8vsJJ4ZUjJh

# Only ship error/exception/traceback lines
LOG_ERROR_REGEX=(?i)(error|exception|traceback)
