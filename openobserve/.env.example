#
# Copy to .env and adjust before running docker compose in this folder.
#

OO_IMAGE_TAG=latest
OO_HTTP_PORT=5080
OO_INGESTION_PORT=5081
OO_QUERY_THREAD_POOL_SIZE=16
OO_ROOT_EMAIL=admin@example.com
OO_ROOT_PASSWORD=Admin123!

# Optional: enable SMTP so OpenObserve can send alert emails.
ZO_SMTP_ENABLED=true
ZO_SMTP_HOST=smtp.gmail.com
ZO_SMTP_PORT=587
ZO_SMTP_USER_NAME=your-gmail-address@gmail.com
ZO_SMTP_PASSWORD=your-app-password
ZO_SMTP_FROM_EMAIL=your-gmail-address@gmail.com
ZO_SMTP_ENCRYPTION=starttls
