#
# Copy this file to .env and adjust values for your environment.
#

# Containers to watch via `docker logs -f`
MONITOR_CONTAINERS=manta-vllm-server,manta-vllm-server-2

# Optional: override the hostname reported to OpenObserve (defaults to container hostname)
# MONITOR_HOST=my-docker-host

# Where to send the error/exception matches
OPENOBSERVE_URL=http://192.168.61.50:5080/api/default/default/_json
OPENOBSERVE_USER=admin@example.com
OPENOBSERVE_PASSWORD=Admin123!

# Optional tuning knobs
# Match uppercase ERROR tokens by default; extend with additional words if needed.
ERROR_PATTERN=(?<!["'])ERROR(?![A-Za-z])
# Detect the start of a Python traceback to capture the full stack trace.
TRACEBACK_PATTERN=Traceback \(most recent call last\):
# Avoid infinitely buffering gigantic tracebacks.
TRACEBACK_MAX_LINES=400
QUEUE_MAX_SIZE=2000
BATCH_MAX_SIZE=50
BATCH_MAX_INTERVAL=1
MAX_SEND_RETRIES=6
SEND_BASE_BACKOFF=1.5
CONNECT_TIMEOUT=2
READ_TIMEOUT=5
OPENOBSERVE_BOOT_TIMEOUT=120
OPENOBSERVE_BOOT_POLL=2
CONTAINER_RESTART_DELAY=3
LOG_LEVEL=INFO
